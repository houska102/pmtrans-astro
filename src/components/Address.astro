---
import { getCms } from "../service/api"

const address = await getCms('/addresses').then((addresses) => addresses[0])
---
<article id="address-map-section" class="transparent-subtle">
      <h2 class="section-title">NaÅ¡e provozovna</h2>
      <div class="container address-map-grid">
          <section class="address-details-container">
            <h3>Adresa</h3>
            <address class="address-details">
                <p>
                  {address.street}<br>
                  {address.city} {address.zip}<br>
                  {address.country}
                </p>
            </address>
          </section>
          <section class="map-container">
              <iframe 
                  src={address.mapUrl} 
                  width="600" 
                  height="450"
                  allowfullscreen=""
                  referrerpolicy="no-referrer-when-downgrade">
              </iframe>
          </section>
      </div>
  </article>